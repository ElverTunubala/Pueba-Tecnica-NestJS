
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid()) @db.Char(36)
  name     String
  email    String    @unique
  messages Message[]
}

model Message {
  id        String   @id @default(uuid()) @db.Char(36)
  content   String
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}